<!doctype html>
<html>
  <body style="margin:0;padding:0;background:#F4FBF8;font-family:Arial,sans-serif;color:#0A4D3C;">
    <div style="max-width:640px;margin:0 auto;padding:24px;">
      <div style="background:#0FB872;border-radius:14px;padding:18px 20px;color:white;">
        <div style="font-size:18px;font-weight:700;">Prox</div>
        <div style="font-size:14px;opacity:.95;">Weekly Deals</div>
      </div>

      <div style="height:16px;"></div>

      <div style="background:white;border-radius:14px;padding:18px 20px;">
        <div style="font-size:16px;font-weight:700;margin-bottom:8px;">
          Hi {{ user_name }} — your top {{ total_deals }} deals this week
        </div>
        <div style="font-size:13px;color:#2a6b57;margin-bottom:14px;">
          Filtered to your preferred retailers.
        </div>

        {% for retailer, items in deals_by_retailer.items() %}
          <div style="margin:18px 0 10px;font-size:14px;font-weight:700;color:#0A4D3C;">
            {{ retailer }}
          </div>

          <table width="100%" cellpadding="0" cellspacing="0" style="border-collapse:collapse;">
            {% for d in items %}
              <tr style="border-top:1px solid #e8f3ef;">
                <td style="padding:10px 0;">
                  <div style="font-weight:700;">{{ d.product }}</div>
                  <div style="font-size:12px;color:#3f7c69;">{{ d.size }} • {{ d.category }}</div>
                  <div style="font-size:12px;color:#3f7c69;">Valid {{ d.start_date }} → {{ d.end_date }}</div>
                </td>
                <td align="right" style="padding:10px 0;font-weight:800;color:#0FB872;">
                  ${{ '%.2f'|format(d.price) }}
                </td>
              </tr>
            {% endfor %}
          </table>
        {% endfor %}
      </div>

      <div style="height:14px;"></div>

      <div style="font-size:12px;color:#3f7c69;padding:0 4px;">
        <a href="{{ manage_prefs_url }}" style="color:#0A4D3C;text-decoration:underline;">Manage preferences</a>
        <div style="margin-top:8px;opacity:.9;">You’re receiving this as a test send for the Prox assessment.</div>
      </div>
    </div>
  </body>
</html>
